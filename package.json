{
  "name": "nanoclaw",
  "version": "2.0.19",
  "description": "Personal Claude assistant. Lightweight, secure, customizable.",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "build": "bun run build:ui && bun run build:server",
    "build:ui": "bun src/ui/build.ts",
    "build:server": "tsc",
    "start": "bun dist/index.js",
    "dev": "bun --watch src/index.ts",
    "typecheck": "tsc --noEmit",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "test": "bun test",
    "check:supermemory": "bun scripts/check-supermemory.ts",
    "generate:cua-client": "bun scripts/generate-cua-client.ts",
    "setup:envs": "bun run scripts/setup-envs.ts",
    "docker:requirements": "./scripts/ensure-docker-requirements.sh",
    "deploy:macos": "./scripts/deploy-launchd.sh",
    "deploy:linux": "./scripts/deploy-systemd.sh"
  },
  "dependencies": {
    "@grammyjs/files": "^1.2.0",
    "cron-parser": "^5.5.0",
    "grammy": "^1.39.3",
    "pino": "^9.6.0",
    "pino-pretty": "^13.0.0",
    "preact": "^10.28.3",
"supermemory": "^4.0.0",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@types/node": "^22.10.0",
    "bun-types": "^1.3.8",
    "prettier": "^3.8.1",
    "typescript": "^5.7.0"
  }
}
